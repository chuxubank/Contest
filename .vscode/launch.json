    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ (LLDB)",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "C++ Compile",
            "program": "${workspaceFolder}/a.out",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb"
        },
        {
            "name": "C++ (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "C++ Compile",
            "program": "${workspaceFolder}/a",
            "args": [],
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": true,
            "cwd": "${workspaceFolder}",
            "internalConsoleOptions": "neverOpen",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ]
        },
        {
            "name": "Python",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config:python.pythonPath}",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "env": {},
            "envFile": "${workspaceFolder}/.env",
            "debugOptions": [
                "RedirectOutput"
            ]
        }
    ]
}